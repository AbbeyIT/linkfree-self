---
import type { UserProfile } from "types/user";

const { name, bio, avatar, links } = Astro.props as UserProfile;
---

<div
  class="flex flex-col items-center justify-center min-h-screen w-full space-y-12 container px-2 sm:px-4 md:px-8 lg:px-12 xl:px-16 2xl:px-20 m-auto"
>
  <div class="flex flex-row space-x-8">
    <div class="flex flex-col items-center justify-center min-w-32 min-h-32">
      <img
        class="aspect-square rounded-full"
        src={avatar}
        alt={name}
        width={128}
        height={128}
      />
    </div>
    <div class="flex flex-col justify-center space-y-4">
      <h1 class="text-2xl md:text-4xl font-bold">{name}</h1>
      <p class="md:text-xl text-gray-400 max-w-md">{bio}</p>
    </div>
  </div>
  <div class="flex flex-col justify-center space-y-2 w-full container">
    {
      links.map((link) => (
        <a
          class="flex font-sans justify-between items-center rounded-md bg-slate-800 hover:bg-slate-700 py-2 px-4 text-gray-300 hover:text-gray-200 transition-colors duration-300"
          href={`/links/${encodeURIComponent(link.url)}`}
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="md:text-lg">{link.name}</span>
          <span class="!text-gray-400 text-sm">{link.clicks}</span>
        </a>
      ))
    }
  </div>
</div>
